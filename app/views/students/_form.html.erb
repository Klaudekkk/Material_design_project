<%= render 'shared/errors', obj: @student %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <% if @student.new_record? %>
        <h3 class="header">Sign up!</h3>
          <% else %>
          <h3 class="header">Edit profile</h3>
          <%end %>
        <div class="row">
          <%= form_for(@student, html: { class: "col s12" }) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, placeholder: "Podaj swoje imię", autofocus: true %>
                <%= f.label :name %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.email_field :email, placeholder: "Podaj email" %>
                <%= f.label :email %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, placeholder: "Hasło" %>
                <%= f.label :password %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password_confirmation, placeholder: "powtorz haslo" %>
                <%= f.label :password_confirmation %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <button class="btn pink lighten-3 waves-effect waves-light" type="submit" name="action">
                  <%= f.submit(@student.new_record? ? "Sign up" : "Submit Updates") %>
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>