<% if obj.errors.any? %>
  <div class="container">
    <div class="row sign-up-form">
      <div class="col s12 m12 l12">
        <div class="card-panel red lighten-2">
          <span class="white-text">
              <% if obj.errors.count == 1 %>
                1 błąd przy tworzeniu konta
              <% elsif obj.errors.count > 1 %>
                  <%= obj.errors.count %> błędy przy tworzeniu konta
                <% end %>
            <ul>
                  <% obj.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
          </span>
        </div>
      </div>
    </div>
  </div>
<% end %>